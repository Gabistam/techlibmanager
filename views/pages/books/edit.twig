{% extends "layout/base.twig" %}

{% block title %}Modifier {{ book.title }}{% endblock %}

{% block content %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h3">
            <i class="fas fa-edit me-2"></i>Modifier "{{ book.title }}"
        </h1>
        <div>
            <a href="/books/{{ book._id }}" class="btn btn-outline-primary me-2">
                <i class="fas fa-eye me-1"></i>Voir
            </a>
            <a href="/books" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left me-1"></i>Retour
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-lg-12">
            <form action="/books/{{ book._id }}" method="POST">
                {% include 'pages/books/_form.twig' with {'book': book} %}
            </form>
        </div>
    </div>
{% endblock %}