{# views/delete.twig #}
{% extends "layout/base.twig" %}

{% block title %}Supprimer mon compte{% endblock %}

{% block content %}
<div class="container">
    <h1 class="mt-4 text-danger">Supprimer mon compte</h1>

    {% if error %}
        <div class="alert alert-danger" role="alert">
            {{ error }}
        </div>
    {% endif %}
    
    {% if success %}
        <div class="alert alert-success" role="alert">
            {{ success }}
        </div>
    {% endif %}

    <p class="text-danger">
        Attention : cette action est <strong>irréversible</strong>.  
        En confirmant, vous supprimerez définitivement votre compte et toutes vos données.
    </p>

    <form action="/profile/delete" method="POST">
        <button type="submit" class="btn btn-danger">
            Confirmer la suppression
        </button>
        <a href="/profile" class="btn btn-secondary ms-2">
            Annuler
        </a>
    </form>
</div>
{% endblock %}
